<p id="notice"><%= notice %></p>
<p>
  <strong>画像:</strong>
  <%= image_tag @picture.image.url %>
</p>
<p>
  <strong>コメント:</strong>
  <%= @picture.comment %>
</p>
<p>
  <strong>投稿者:</strong>
  <%= @picture.user.name %>
</p>
<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入り登録する', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<%= link_to 'Edit', edit_picture_path(@picture), class: 'btn btn-info' if current_user == @picture.user  %> |
<%= link_to 'Back', pictures_path, class: 'btn btn-info'  %>
